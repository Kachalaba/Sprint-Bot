# НЕ ХРАНИТЕ заполенный `.env` в репозитории. Все секреты задаются через CI/CD secrets.
BOT_TOKEN=""  # Telegram Bot API токен Sprint-Bot (обязательно)
ADMIN_IDS=""  # Список ID администраторов через запятую (опционально)
SPREADSHEET_KEY=""  # Ключ Google Sheets со спринтами (если используете backend sheets)
STORAGE_BACKEND="sheets"  # Допустимые значения: sheets, postgres
DB_URL="postgresql+asyncpg://postgres:<password>@postgres:5432/sprint_bot"  # Подставьте пароль/хост для Postgres
GOOGLE_APPLICATION_CREDENTIALS="creds/service-account.json"  # Путь до service-account JSON вне репозитория
SENTRY_DSN=""  # DSN проекта Sentry (опционально, для мониторинга)
ENV="production"  # Название окружения: production, staging и т.п.
QUIET_HOURS="22:00-07:00"  # Ночной режим отправки уведомлений
QUIET_QUEUE_INTERVAL="60"  # Как часто проверять очередь тихих уведомлений, мин
QUIET_HOURS_TZ="Europe/Kyiv"  # Часовой пояс для тихих часов
TURN_ANALYSIS_DEFAULT_STROKE="breaststroke"  # Стиль по умолчанию для анализа попыток
S3_BACKUP_BUCKET=""  # Название бакета для резервных копий (обязательно для S3 backup)
S3_ACCESS_KEY=""  # Ключ доступа к S3 бакету (получайте из Secret Manager)
S3_SECRET_KEY=""  # Секретный ключ доступа к S3 бакету (получайте из Secret Manager)
S3_BACKUP_PREFIX="sprint-bot/backups/"  # Папка внутри бакета для архивов
BACKUP_INTERVAL_HOURS="6"  # Как часто делать резервные копии, часы
S3_STORAGE_CLASS="STANDARD"  # Класс хранения S3 (например, STANDARD, STANDARD_IA)
S3_ENDPOINT_URL=""  # Кастомная конечная точка S3 совместимого хранилища
CHAT_DB_PATH="data/chat.db"  # Путь до файла чата, если нужен нестандартный каталог
